<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/project_item_imageView"
        android:layout_width="176dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/project_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_item_imageView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="39dp"
        android:text="Project Name" />

    <TextView
        android:id="@+id/project_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_item_name"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="14dp"
        android:text="Project Description" />

    <TextView
        android:id="@+id/project_thread_colour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_item_imageView"
        android:layout_marginStart="93dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/project_item_name"
        android:text="colour" />

    <TextView
        android:id="@+id/project_thread_amounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_thread_colour"
        android:layout_marginStart="56dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/project_item_description"
        android:text="amount" />

    <TextView
        android:id="@+id/project_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="79dp"
        android:text="@string/projects_wishlist_title" />
</RelativeLayout>