<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<View
		android:id="@+id/colourRectangle"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:background="#DDDDDD"
		android:visibility="visible"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintRight_toRightOf="@id/guidelineColourSep"
		app:layout_constraintBottom_toBottomOf="parent"
		/>

	<TextView
		android:id="@+id/projectThreadDmc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:textStyle="bold"
		android:text="@string/placeholder"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintRight_toRightOf="@id/guidelineAmountSep"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/guidelineColourSep"
		/>

	<TextView
		android:id="@+id/projectThreadAmount"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:text="@string/placeholder"
		android:textSize="16sp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/guidelineAmountSep"
		/>

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guidelineColourSep"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_begin="50dp" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guidelineAmountSep"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_begin="270dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
